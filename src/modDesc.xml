<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="32">
    <author>TyKonKet</author>
    <version>1.0.0.0</version>
    <title>
        <en>Creator Tools</en>
    </title>
    <description>
        <en>Creator Tools allow you to do magics with HUD, camera and much more.</en>
    </description>
    <iconFilename>icon.dds</iconFilename>
    <multiplayer supported="true" />
    <extraSourceFiles>
        <sourceFile filename="virtualAxis.lua" />
        <sourceFile filename="extensions.lua" />
        <sourceFile filename="script.lua" />
    </extraSourceFiles>
    <inputBindings>
        <input name="CT_HUD_TOGGLE" category="ONFOOT VEHICLE" key1="KEY_lctrl KEY_h" device="1" visible="true" />
        <input name="CT_WALKING_SPEED_DOWN" category="ONFOOT" key1="KEY_1" device="1" visible="true" />
        <input name="CT_WALKING_SPEED_UP" category="ONFOOT" key1="KEY_2" device="1" visible="true" />
        <input name="CT_WALKING_SPEED_DEFAULT" category="ONFOOT" key1="KEY_3" device="1" visible="true" />
        <axis name="AXIS_CT_FOVY" category="ONFOOT" key1="KEY_lalt KEY_2" key2="KEY_lalt KEY_1" device="1" invert="true" isHalfAxis="false" mouseInvert="true" visible="true"/>
        <input name="CT_FOVY_DEFAULT" category="ONFOOT" key1="KEY_lalt KEY_3" device="1" visible="true" />
</inputBindings>
     <l10n>   
        <text name="input_CT_HUD_TOGGLE">
            <en>Hide/Show HUD</en>
            <it>Nascondi/Mostra gli HUD</it>
        </text>
        <text name="CT_SHOW_HUD_HELP">
            <en>Show HUD</en>
            <it>Mostra gli HUD</it>
        </text>
        <text name="CT_HIDE_HUD_HELP">
            <en>Hide HUD</en>
            <it>Nascondi gli HUD</it>
        </text>
        <text name="input_CT_WALKING_SPEED_DOWN">
            <en>Decrease the walking speed</en>
            <it>Diminuisci la velocità di movimento</it>
        </text>
        <text name="input_CT_WALKING_SPEED_DEFAULT">
            <en>Set to 1x the walking speed</en>
            <it>Imposta ad 1x la velocità di movimento</it>
        </text>
        <text name="input_CT_WALKING_SPEED_UP">
            <en>Increase the walking speed</en>
            <it>Aumenta la velocità di movimento</it>
        </text>
        <text name="CT_WALKING_SPEED_HELP">
            <en>Use %s, %s and %s to set the walking speed</en>
            <it>Usa %s, %s e %s per impostare la velocità di movimento</it>
        </text>
        <text name="input_CT_FOVY_DEFAULT">
            <en>Set the camera FOV to default value</en>
            <it>Imposta il FOV della camera al valore predefinito</it>
        </text>
        <text name="input_AXIS_CT_FOVY_1">
            <en>Increase the camera FOV</en>
            <it>Aumenta il FOV della camera</it>
        </text>
        <text name="input_AXIS_CT_FOVY_2">
            <en>Decrease the camera FOV</en>
            <it>Diminuisce il FOV della camera</it>
        </text>
        <text name="AXIS_CT_FOVY_HELP">
            <en>Change the camera FOV</en>
            <it>Cambia il FOV della camera</it>
        </text>
    </l10n>
    <git>
        <host>GitHub</host>
        <url>https://github.com/TyKonKet/FS17_CreatorTools.git</url>
    </git>
</modDesc>